%ul
  - @users.each do |user|
    %li= user.username
    %li= user.followers
    - if current_user && user.followers.include?(current_user)
      %li= link_to "unfollow user", follows_path(:followable_id => user.id, :followable_type => user.class.to_s), :method => :delete
    - else
      %li= link_to "follow user", follows_path(:followable_id => user.id, :followable_type => user.class.to_s), :method => :post
    - user.countries.each do |country|
      %li=country.name 
      %li=country.followers
      - if current_user && country.followers.include?(current_user)
        %li= link_to "unfollow country", follows_path(:followable_id => country.id, :followable_type => country.class.to_s), :method => :delete
      - else
        %li=link_to "follow country", follows_path(:followable_id => country.id, :followable_type => country.class.to_s), :method => :post
  

