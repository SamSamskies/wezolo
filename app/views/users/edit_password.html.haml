.content
  .container.green-full-width
    .form-effects.form-margins.basic-info-edit
      %h1 User settings
      = form_for @user, :url => update_password_users_path, :method => :put do |f|
        = f.label :current_password
        = f.password_field :current_password, :required => true
        = f.label :password
        = f.password_field :password, :required => true
        = f.label :password_confirmation
        = f.password_field :password_confirmation, :required => true
        = f.submit "Change Password", :class => "btn btn-danger"
    
        
        - if flash[:error]
          .alert.alert-error
            %a.close{"data-dismiss"=>"alert"}
            %h4.alert-heading WeZooNOoOoOO!
            %p= flash[:error]
        - if flash[:notice]
          .alert.alert-success
            %a.close{"data-dismiss"=>"alert"}
            %h4.alert-heading WEZOLO SUCEESS!
            %p= flash[:notice]
